datasource db {
    provider = "mongodb"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}


model usuarios {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    email       String  @unique
    password    String
    tipo        String  @default("USUARIO_FINAL")
    estatus     String  @default("ACTIVO")
    nombre      String
    apPaterno   String?
    apMaterno   String? 
}

model modificadores {
    id              String  @id @default(auto()) @map("_id") @db.ObjectId
    nombre          String  @unique
    disponibilidad  Boolean @default(true)
    precio          Float
}
